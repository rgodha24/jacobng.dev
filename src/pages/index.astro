---
import Layout from "../layouts/Layout.astro";
import About from "../components/about.svelte";
---

<Layout>
	<nav class=""></nav>
	<section class="w-screen bg-blue-900 h-screen">
		<div class="flex flex-row justify-center items-center h-full">
			<h1 class="text-9xl text-pink-500">Jacob Ng</h1>
		</div>
	</section>
	<div class="flex flex-row justify-center items-center">
		<button
			class="w-16 h-16 -mt-24 bg-red-500 rounded-full"
			id="nav-down"
			data-to="1"></button>
	</div>

	<About client:load />
	<div class="flex flex-row justify-center items-center">
		<button
			class="w-16 h-16 -mt-24 bg-red-500 rounded-full"
			id="nav-down"
			data-to="0"></button>
	</div>
</Layout>

<script lang="ts">
	const buttons = document.querySelectorAll("#nav-down");

	buttons.forEach((b) => {
		const num = Number(b.getAttribute("data-to") || "1");
		b.addEventListener("click", () => {
			console.log("awef awef awe f", num);
			window.scrollTo({
				top: window.innerHeight * num,
				behavior: "smooth",
			});
		});
	});
</script>
