---
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<section class="w-screen bg-blue-900 h-screen">
		<div class="flex flex-row justify-center items-center h-full">
			<h1 class="text-9xl text-pink-500">Jacob Ng</h1>
		</div>
	</section>
	<div class="flex flex-row justify-center items-center">
		<button
			class="w-16 h-16 -mt-24 bg-red-500 rounded-full"
			id="nav-down"
			data-to="1"></button>
	</div>

	<section class="w-screen bg-purple-900 h-screen">
		<div class="flex flex-row justify-center items-center h-full">
			<h1 class="text-9xl text-pink-500">Is a monkey</h1>
		</div>
	</section>

	<div class="flex flex-row justify-center items-center">
		<button
			class="w-16 h-16 -mt-24 bg-red-500 rounded-full"
			id="nav-down"
			data-to="2"></button>
	</div>

	<section class="w-screen bg-red-900 h-screen">
		<div class="flex flex-row justify-center items-center h-full">
			<h1 class="text-9xl text-pink-500 overflow-auto text-center">
				who sucks at overwatch
			</h1>
		</div>
	</section>

	<div class="flex flex-row justify-center items-center">
		<button
			class="w-16 h-16 -mt-24 bg-red-500 rounded-full"
			id="nav-down"
			data-to="3"></button>
	</div>

	<section class="w-screen bg-blue-900 h-screen">
		<div class="flex flex-row justify-center items-center h-full gap-x-8">
			<div class="flex flex-row px-[25%] gap-x-8">
				<p class="flex-1 text-white">
					Hello! My name is Jacob Ng, a current high school junior at Brophy
					College Preparatory. I have been learning all sorts of languages like
					Java, Python, HTML, CSS, and Javascript since Freshman year. I love
					music, video games, and fashion. Enjoy the website and my portfolios!
				</p>
				<div class="flex-1 aspect-square">
					<img
						src="https://www.jacobng.dev/_astro/jacob1.c0f4a299.jpg"
						alt="Jacob Ng"
					/>
				</div>
			</div>
		</div>

		<div class="flex flex-row justify-center items-center">
			<button
				class="w-16 h-16 -mt-24 bg-red-500 rounded-full"
				id="nav-down"
				data-to="0"></button>
		</div>
	</section>
</Layout>

<script lang="ts">
	const buttons = document.querySelectorAll("#nav-down");

	buttons.forEach((b) => {
		const num = Number(b.getAttribute("data-to") || "1");
		b.addEventListener("click", () => {
			console.log("awef awef awe f", num);
			window.scrollTo({
				top: window.innerHeight * num,
				behavior: "smooth",
			});
		});
	});
</script>
